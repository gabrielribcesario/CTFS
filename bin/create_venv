#!/bin/bash

echo "Creating venv..."

python3 -m venv ctfs
if [ $? -ne 0 ]; then
    echo "Internal error! Could not create virtual environment."
    exit 1
fi

source ctfs/bin/activate

echo "Installing required packages..."

python3 -m pip install pip --upgrade
if [ $? -ne 0 ]; then
    echo "Internal error! Could not install pip."
    exit 1
fi

pip install -r requirements.txt
if [ $? -ne 0 ]; then
    echo "Internal error! Could not install the required packages."
    exit 1
fi

echo "Done."
exit 0